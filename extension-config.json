{
  "version": "0.1.0",
  "id": "@shopgate-project/bolt-checkout",
  "components": [
    {
      "id": "BoltCheckoutButton",
      "path": "frontend/portals/CartCheckoutButton/index.jsx",
      "target": "cart.checkout-button",
      "type": "portals"
    },
    {
      "id": "Subscribers",
      "type": "subscribers",
      "path": "frontend/subscriptions"
    },
    {
      "id": "boltCartToken",
      "path": "frontend/reducers/boltCartToken.js",
      "type": "reducers"
    }
  ],
  "configuration": {
    "boldApiBaseUrl": {
      "type": "admin",
      "destination": "backend",
      "default": "https://api.bolt.com/",
      "params": {
        "type": "text",
        "label": "bolt pay api base url",
        "required": true
      }
    },
    "boldApiKey": {
      "type": "admin",
      "destination": "backend",
      "params": {
        "type": "text",
        "label": "bolt pay api key",
        "required": true
      }
    },
    "boltPublishableKey": {
      "type": "admin",
      "destination": "frontend",
      "params": {
        "required": true,
        "type": "string",
        "label": "Bolt Publishable Key"
      }
    },
    "cdnUrl": {
      "type": "admin",
      "destination": "frontend",
      "default": "connect.bolt",
      "params": {
        "required": true,
        "type": "string",
        "label": "Bolt CDN url"
      }
    },
    "shoppingCart": {
      "type": "admin",
      "destination": "frontend",
      "default": "Magento",
      "params": {
        "required": true,
        "type": "string",
        "label": "Merchant's shopping cart provider"
      }
    }
  }
}
